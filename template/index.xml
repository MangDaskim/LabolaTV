<script src="https://cdn.jsdelivr.net/npm/papaparse@5.4.1/papaparse.min.js"></script>

<script>
const customDomain = "neobolatv"; // Ganti ini sesuai keinginanmu
const playerHost = `${customDomain}-player.blogspot.com`;
  

  const SHEET_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vTFBeFaj1e0S-Ghi-7WDdVBs3IiBWwMqyf--lgwH469XXJMl5YOfIv3Qx5cdnzxW7GGFMpZNIYBR6On/pub?output=csv';

  function togglePlayLinks(btn) {
    const playLinks = btn.nextElementSibling;
    playLinks.classList.toggle("hidden");
  }

function updateStatus() {
  const pertandinganEls = document.querySelectorAll(".pertandingan");
  pertandinganEls.forEach(el => {
    const dateStr = el.getAttribute("data-jadwal");
    const statusEl = el.querySelector(".live-status");
    const tombolTonton = el.querySelector(".btn-tonton");
    const waktu = new Date(dateStr);
    const sekarang = new Date();

    const selisihMs = waktu - sekarang; // waktu pertandingan - sekarang
    const selisihMenit = (sekarang - waktu) / (1000 * 60); // sekarang - waktu pertandingan

    // Atur status
    if (selisihMenit >= 0 && selisihMenit <= 115) {
      statusEl.textContent = "LIVE ðŸ”´";
      if (tombolTonton) tombolTonton.style.display = 'block'; // Tampilkan saat LIVE
    } else if (selisihMenit > 115) {
      statusEl.textContent = "END";
      if (tombolTonton) tombolTonton.style.display = 'none'; // Sembunyikan setelah selesai
    } else if (selisihMs > 0) {
      // Belum mulai
      const selisihHari = Math.floor(selisihMs / (1000 * 60 * 60 * 24));
      const jam = Math.floor((selisihMs % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const menit = Math.floor((selisihMs % (1000 * 60 * 60)) / (1000 * 60));
      const detik = Math.floor((selisihMs % (1000 * 60)) / 1000);

      if (selisihHari >= 1) {
        statusEl.textContent = `${selisihHari} Hari Lagi`;
      } else {
        statusEl.textContent = `${jam}j ${menit}m ${detik}d`;
      }

      // Tampilkan tombol jika kurang dari 5 jam
      if (selisihMs <= 5 * 60 * 60 * 1000) {
        if (tombolTonton) tombolTonton.style.display = 'block';
      } else {
        if (tombolTonton) tombolTonton.style.display = 'none';
      }
    }
  });
}

function renderPertandingan(data) {
  const container = document.getElementById("jadwal-container");
  container.innerHTML = "";

  const sorted = data
    .filter(row => row.Tanggal)
    .map(row => {
      let jam = "";

      if (row.Jam instanceof Date) {
        const h = row.Jam.getHours().toString().padStart(2, '0');
        const m = row.Jam.getMinutes().toString().padStart(2, '0');
        jam = `${h}:${m}`;
      } else if (typeof row.Jam === "string") {
        jam = row.Jam.trim().padStart(5, '0');
        if (!jam.includes(":")) jam += ":00";
      } else {
        jam = "00:00";
      }

      const tanggal = (row.Tanggal || "").trim();
      const datetime = new Date(`${tanggal}T${jam}:00`);

      return { ...row, datetime, Jam: jam };
    })
    .sort((a, b) => a.datetime - b.datetime);

  // Grouping by Liga
  const groupedByLiga = {};
  sorted.forEach(item => {
    const liga = item.Liga || 'LIGA';
    if (!groupedByLiga[liga]) groupedByLiga[liga] = [];
    groupedByLiga[liga].push(item);
  });

  // Render grouped
  Object.keys(groupedByLiga).forEach(liga => {
    const ligaGroup = groupedByLiga[liga];
    ligaGroup.forEach(item => {
      const fullDate = `${item.Tanggal}T${item.Jam}:00`;
      const tanggal = new Date(fullDate);
      const hari = tanggal.toLocaleDateString("id-ID", { weekday: 'long' });
      const tglFormat = tanggal.toLocaleDateString("id-ID", { day: 'numeric', month: 'long', year: 'numeric' });
      const jamFormat = tanggal.toLocaleTimeString("id-ID", { hour: '2-digit', minute: '2-digit' });

      const playList = (item['Play Links'] || "").split(",").map(p => {
        const match = p.match(/(Play \d+)\s*\(([^)]+)\)/);
        if (match) {
          const label = match[1];
          let url = match[2].trim();
if (url.startsWith("#")) {
  const hash = url.substring(1);
  url = `https://${playerHost}/#${hash}`;
}
return `<button onclick="window.location.href='${url}'">${label}</button>`;
        }
        return '';
      }).join("");

      const html = `
        <div class="pertandingan" data-jadwal="${fullDate}">
          <div class="liga">${item.Liga || 'LIGA'}</div>
          <div class="tim-container">
            <div class="tim">
              <img src="${item['Logo 1 URL'] || ''}">
              <div>${item['Tim 1'] || '-'}</div>
            </div>
            <div class="info-tengah">
              <p>${hari}, ${tglFormat}</p>
              <p class="jam">${jamFormat} WIB</p>
              <p class="live-status"></p>
            </div>
            <div class="tim">
              <img src="${item['Logo 2 URL'] || ''}">
              <div>${item['Tim 2'] || '-'}</div>
            </div>
          </div>
          <button class="btn-tonton" style="display: none;" onclick="togglePlayLinks(this)">Tonton Sekarang</button>
          <div class="play-links hidden">
            ${playList}
          </div>
        </div>`;
      container.insertAdjacentHTML('beforeend', html);
    });
  });

  updateStatus();
}

  Papa.parse(SHEET_URL, {
    download: true,
    header: true,
    complete: function(results) {
      renderPertandingan(results.data);
    }
  });

  setInterval(updateStatus, 1000);
</script>


