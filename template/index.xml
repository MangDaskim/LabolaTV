function updateMatchCountdowns() {
  const scheduleTables = document.querySelectorAll(".match-container");

  scheduleTables.forEach(function (table) {
    const timeEl = table.querySelector(".match-time");
    const countdownEl = table.querySelector(".match-countdown");

    if (!timeEl || !countdownEl) return;

    const timeStr = timeEl.dataset.start;
    const dateStr = timeEl.dataset.date;
    const matchTime = new Date(`${dateStr}T${timeStr}:00`);
    const now = new Date();
    const diff = matchTime - now;

    // Jika memiliki class 'ended', tampilkan END dan berhenti di sini
    if (timeEl.classList.contains("ended")) {
      timeEl.textContent = "END";
      countdownEl.style.display = "none";
      return;
    }

    // Jika pertandingan sudah dimulai
    if (diff <= 0) {
      const elapsed = now - matchTime;
      const elapsedMinutes = elapsed / (1000 * 60);

      if (elapsedMinutes >= 115) {
        timeEl.textContent = "END";
        timeEl.classList.add("ended");
        countdownEl.style.display = "none";
      } else {
        timeEl.textContent = "LIVE";
        countdownEl.style.display = "none";
      }

      return;
    }

    // Format hari dan waktu
    const hari = matchTime.toLocaleDateString('id-ID', { weekday: 'long' });
    const jam = matchTime.getHours().toString().padStart(2, '0');
    const menit = matchTime.getMinutes().toString().padStart(2, '0');
    const jamMenit = `${jam}:${menit}`;

    // Tampilkan waktu dan hari
    timeEl.textContent = `ðŸ“… ${hari} ðŸ•’ ${jamMenit} WIB`;

    // Tampilkan countdown dengan tambahan hari jika lebih dari 24 jam
    let countdownText = "";
    if (diff > 86400000) {
      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      countdownText = `<strong><font color="#facc15">${days}h ${hours}j ${minutes}m ${seconds}d</font></strong>`;
    } else {
      const hours = Math.floor(diff / (1000 * 60 * 60));
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((diff % (1000 * 60)) / 1000);
      countdownText = `<strong><font color="#facc15">${hours}j ${minutes}m ${seconds}d</font></strong>`;
    }

    countdownEl.style.display = "block";
    countdownEl.innerHTML = countdownText;
  });
}

document.addEventListener("DOMContentLoaded", function () {
  updateMatchCountdowns();
  setInterval(updateMatchCountdowns, 1000);
});
</script>]]></b:widget-setting>
